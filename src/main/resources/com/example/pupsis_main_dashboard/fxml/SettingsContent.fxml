<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="810.0" styleClass="cards" stylesheets="@../css/SettingsContent.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pupsis_main_dashboard.controllers.SettingsController">

    <Label styleClass="settings-title" text="Settings" />
    
    <VBox spacing="10.0" styleClass="settings-section">
        <Label styleClass="settings-label" text="Appearance" />
        <Button prefHeight="28.0" prefWidth="140.0" styleClass="settings-control" text="Change Theme" />
    </VBox>
    
    <VBox spacing="10.0" styleClass="settings-section">
        <Label styleClass="settings-label" text="Account" />
        <Button prefWidth="140.0" styleClass="settings-control" text="Change Password" />
      <VBox.margin>
         <Insets bottom="20.0" top="20.0" />
      </VBox.margin>
    </VBox>
    
    <VBox spacing="10" styleClass="settings-section">
        <Label styleClass="settings-label" text="Notifications" />
        <CheckBox text="Enable Email Notifications" />
        <CheckBox text="Enable Push Notifications" />
    </VBox>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
