<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox fx:id="rootVBox" maxWidth="810.0" minWidth="810.0" prefHeight="866.0" prefWidth="810.0" spacing="10.0" style="-fx-background-color: transparent;" styleClass="font" stylesheets="@../css/HomeContent.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pupsis_main_dashboard.controllers.FacultyHomeContentController">
   <padding>
      <Insets bottom="20.0" left="0.0" right="0.0" top="0.0" />
   </padding>
   <!-- Welcome Header -->
   <FlowPane styleClass="welcome-flow-pane">
      <children>
         <HBox alignment="CENTER_LEFT" spacing="15" styleClass="welcome-header-hbox">
            <ImageView fitHeight="50" fitWidth="50" styleClass="welcome-logo">
               <image>
                  <Image url="@../Images/PUPSJ Logo.png" />
               </image>
            </ImageView>
            <VBox styleClass="welcome-info-container">
               <Label styleClass="welcome-text" text="Welcome back," />
               <Label fx:id="facultyNameLabel" styleClass="faculty-name" text="Faculty Name" />
               <HBox alignment="CENTER_LEFT" spacing="5.0">
                  <children>
                     <Label styleClass="department-label" text="Department:" />
                     <Label fx:id="departmentLabel" styleClass="department-value" text="Department Name" />
                  </children>
               </HBox>
               <Label fx:id="dateLabel" styleClass="date-label" text="May 16, 2025" />
            </VBox>
         </HBox>
      </children>
      <styleClass>
         <String fx:value="cards" />
         <String fx:value="red-card" />
      </styleClass>
   </FlowPane>
   
         <!-- Teaching Statistics -->
   <HBox spacing="10.0" styleClass="stats-container">
      <VBox alignment="CENTER" styleClass="stat-box" HBox.hgrow="ALWAYS">
         <StackPane styleClass="svg-icon-container">
            <SVGPath content="M4,6H2v14c0,1.1,0.9,2,2,2h14v-2H4V6z M20,2H8C6.9,2,6,2.9,6,4v12c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2V4C22,2.9,21.1,2,20,2z M19,11h-4v4h-2v-4H9V9h4V5h2v4h4V11z" 
                    fill="WHITE" scaleX="0.9" scaleY="0.9" styleClass="svg-icon"/>
         </StackPane>
         <Label fx:id="totalClassesLabel" styleClass="stat-value" text="0" />
         <Label styleClass="stat-label" text="Total Classes" />
      </VBox>
      <VBox alignment="CENTER" styleClass="stat-box" HBox.hgrow="ALWAYS">
         <StackPane styleClass="svg-icon-container">
            <SVGPath content="M16,11c1.66,0,2.99-1.34,2.99-3S17.66,5,16,5c-1.66,0-3,1.34-3,3s1.34,3,3,3z M8,11c1.66,0,2.99-1.34,2.99-3S9.66,5,8,5C6.34,5,5,6.34,5,8s1.34,3,3,3z M8,13c-2.33,0-7,1.17-7,3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5z M16,13c-0.29,0-0.62,0.02-0.97,0.05c1.16,0.84,1.97,1.97,1.97,3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" 
                    fill="WHITE" scaleX="0.9" scaleY="0.9" styleClass="svg-icon"/>
         </StackPane>
         <Label fx:id="totalStudentsLabel" styleClass="stat-value" text="0" />
         <Label styleClass="stat-label" text="Total Students" />
      </VBox>
      <VBox alignment="CENTER" styleClass="stat-box" HBox.hgrow="ALWAYS">
         <StackPane styleClass="svg-icon-container">
            <SVGPath content="M19,3h-1V1h-2v2H8V1H6v2H5C3.9,3,3,3.9,3,5l0,14c0,1.1,0.9,2,2,2h14c1.1,0,2-0.9,2-2V5C21,3.9,20.1,3,19,3z M19,19H5V8h14V19z M9,10H7v2h2V10z M13,10h-2v2h2V10z M17,10h-2v2h2V10z M9,14H7v2h2V14z M13,14h-2v2h2V14z M17,14h-2v2h2V14z" 
                    fill="WHITE" scaleX="0.9" scaleY="0.9" styleClass="svg-icon"/>
         </StackPane>
         <Label styleClass="stat-value" text="7" />
         <Label styleClass="stat-label" text="Scheduled Classes Today" />
      </VBox>
   </HBox>
   
         <!-- Schedule and Distribution -->
   <HBox spacing="10.0" styleClass="content-row">
      <VBox styleClass="schedule-container">
         <Label styleClass="section-header" text="Today's Schedule">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </Label>
         <VBox fx:id="todayScheduleVBox" spacing="10.0" styleClass="schedule-list">
            <!-- Schedule items will be added here dynamically -->
            <Label styleClass="loading-label" text="Loading schedule..." />
         </VBox>
      </VBox>
      
            <VBox alignment="TOP_CENTER" styleClass="chart-container">
         <Label styleClass="section-header" text="Class Distribution" />
         <PieChart fx:id="classDistributionChart" labelLineLength="20.0" labelsVisible="false" legendSide="RIGHT" styleClass="distribution-chart" />
      </VBox>
   </HBox>
   
         <!-- Quick Actions and Events -->
   <HBox spacing="10.0" styleClass="content-row">
      <VBox prefHeight="254.0" prefWidth="613.0" styleClass="events-container" HBox.hgrow="ALWAYS">
         <Label styleClass="section-header" text="Upcoming Events">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </Label>
         <VBox fx:id="eventsVBox" spacing="10.0" styleClass="events-list">
            <!-- Events will be added here dynamically -->
            <Label styleClass="loading-label" text="Loading events..." />
         </VBox>
      </VBox>
      
            <VBox alignment="TOP_CENTER" prefHeight="254.0" prefWidth="150.0" spacing="10" styleClass="quick-actions-container">
         <Label styleClass="section-header" text="Quick Actions" />
         <Button minWidth="190.0" styleClass="action-button" text="Input Grades">
            <VBox.margin>
               <Insets left="30.0" right="30.0" />
            </VBox.margin>
         </Button>
         <Button styleClass="action-button" text="View Class Lists" />
         <Button styleClass="action-button" text="Record Attendance" />
         <Button styleClass="action-button" text="Submit Requirements" />
      </VBox>
   </HBox>
</VBox>
