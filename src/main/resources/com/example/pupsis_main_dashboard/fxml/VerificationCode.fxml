<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="root" stylesheets="@../css/VerificationCode.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pupsis_main_dashboard.controllers.VerificationController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    
    <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../images/email-icon.png" />
        </image>
    </ImageView>
    
    <Label text="Email Verification" styleClass="title">
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </Label>
    
    <Label text="We've sent a verification code to your email" styleClass="subtitle"/>
    
    <TextField fx:id="codeField" promptText="Enter 6-digit code" styleClass="code-field" />
    
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="submitButton" defaultButton="true" mnemonicParsing="false" onAction="#handleVerification" prefHeight="40.0" prefWidth="120.0" styleClass="verify-button" text="Verify" />
        <Button fx:id="resendButton" mnemonicParsing="false" onAction="#handleResendCode" styleClass="resend-button" text="Resend Code" />
    </HBox>
    
    <Label fx:id="errorLabel" styleClass="error-label" />
</VBox>
