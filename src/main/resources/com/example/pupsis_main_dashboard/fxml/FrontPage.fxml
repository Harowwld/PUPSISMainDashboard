<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefWidth="1280.0" styleClass="root" stylesheets="@../css/FrontPage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pupsis_main_dashboard.controllers.FrontPageController">
   <clip>
      <Rectangle arcHeight="30.0" arcWidth="30.0" height="720" width="1280" />
   </clip>
         <!-- Background Video -->
   <MediaView fx:id="mediaView" fitHeight="720.0" fitWidth="1280.0" styleClass="backgroundVideo">
      <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
      <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
      <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
      <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
   </MediaView>

   <!-- Title -->
   <Label fx:id="labelHeader" layoutX="391.0" layoutY="275.0" prefHeight="70.0" prefWidth="498.0" text="Welcome to PUPSIS Portal" textAlignment="CENTER" />
   <!--suppress JavaFxDefaultTag -->
   <Pane layoutX="220.0" layoutY="46.0" prefHeight="67.0" prefWidth="840.0" styleClass="navigationBar">
      <Button fx:id="programs" layoutX="365.0" layoutY="18.0" prefHeight="31.0" prefWidth="90.0" styleClass="buttons"
              text="Programs"/>

      <!-- Navigation Buttons -->
      <Button fx:id="coa" alignment="CENTER" layoutX="278.0" layoutY="18.0" prefHeight="31.0" prefWidth="69.0"
              styleClass="buttons" text="COA"/>
      <Button fx:id="about" layoutX="462.0" layoutY="18.0" prefHeight="31.0" prefWidth="84.0" styleClass="buttons"
              text="About"/>
      <Button fx:id="others" alignment="CENTER" layoutX="544.0" layoutY="18.0" prefHeight="31.0" prefWidth="84.0"
              styleClass="buttons" text="Others"/>
      <Button fx:id="getStartedButton" layoutX="644.0" layoutY="18.0" onAction="#handleGetStartedButton"
              prefHeight="31.0" prefWidth="166.0" styleClass="getStarted" text="Get Started" textAlignment="CENTER"/>
      <!--suppress JavaFxDefaultTag -->
      <ImageView fitHeight="47.0" fitWidth="175.0" layoutX="29.0" layoutY="10.0" pickOnBounds="true"
                 preserveRatio="true">
         <image>
            <Image url="@../Images/pupsj-logo.png"/>
         </image>
      </ImageView>
      <Label layoutX="84.0" layoutY="11.0" styleClass="pupsis" text="PUPSIS"/>
   </Pane>

</AnchorPane>
